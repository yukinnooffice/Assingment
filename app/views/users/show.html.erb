<div class="row">
	<div class="col-xs-3">
		<h2>User info</h2>
		<%=render "info" , user: @user %>
		<h2>New book</h2>
		<%=render "books/new_form" , book: @book %>
    </div>

	<div class="col-xs-9">
		<h2>Books</h2>
		<table class='table table-hover table-inverse'>
		  <thead>
		    <tr>
		      <th></th>
		      <th>Title</th>
		      <th>Opinion</th>
		      <th colspan="3"></th>
		    </tr>
		  </thead>

		  <tbody>
		    <% @user.books.each do |book| %>
		    <tr>
		      <th></th>
		      <th><%=book.title%></th>
		      <th><%=book.body%></th>
		      <th></th>
		      <th colspan="2"></th>
		    </tr>
		    <% end %>
		  </tbody>
		</table>
	</div>
</div>